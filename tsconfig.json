{
    "compilerOptions": {
        "module": "esnext",
        "lib": ["esnext"],
        "target": "es6",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "strict": false,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ]
  }